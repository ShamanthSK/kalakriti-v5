rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read all users, write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Works collection - users can read all works, write their own
    match /works/{workId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Messages collection - users can read/write messages they're involved in
    match /messages/{messageId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid in resource.data.participants);
    }

    // Talents collection - users can read all talents, write their own
    match /talents/{talentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
} 